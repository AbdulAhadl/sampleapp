pipeline{
    agent any
    environment{
        dockertag = getDockerTag()
    }
    stages{
        stage("docker build"){
            steps{
                sh "docker build -t  ahadwaqar/development:${dockertag} ."
            }
        }
        stage("docker push"){
            steps{
                withCredentials([string(credentialsId: 'ahadwaqar', variable: 'dockerpush')]) {
                sh "docker login -u ahadwaqar -p ${dockerpush}"
                sh "docker push  ahadwaqar/development:${dockertag}"
                }
            }
        }
    }
} 
def getDockerTag(){
    def DockerTag = sh script: 'git rev-parse HEAD',returnstrout:true
    return DockerTag

}